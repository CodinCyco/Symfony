{% extends "::base.html.twig" %}

{% block title %}OperateurTelecomBundle:SIM:addSim{% endblock %}

{% block body %}
<h1>Welcome to the SIM:all sim page</h1>
    <hr>
    <div class="table-responsive">
        <table class="table table-dark table-hover">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Num Appel</th>
                <th scope="col">solde</th>
                <th scope="col">bonus</th>

            </tr>
            </thead>
            <tbody>
            {% for sim in sims %}
                <tr>
                    <th scope="row">{{ sim.id }}</th>
                    <td>{{ sim.numAppel }}</td>
                    <td>{{ sim.solde }}</td>
                    <td>{{ sim.bonus }}</td>


                </tr>
            {% endfor %}


            </tbody>
        </table>
    </div>
{% endblock %}
