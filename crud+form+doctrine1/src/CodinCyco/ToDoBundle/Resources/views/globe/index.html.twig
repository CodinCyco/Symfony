{% extends "::base.html.twig" %}

{% block title %}CodinCycoToDoBundle:globe:index{% endblock %}

{% block body %}
    <h2>All Globes</h2>
    <a href="{{ path('add') }}" class="btn btn-success">+</a>
    <hr>
    <div class="table-responsive">
    <table class="table table-dark table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Globe</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for globe in globes %}
            <tr>
                <th scope="row">{{ globe.id }}</th>
                <td>{{ globe.name }}</td>
                <td>
                    <a href="{{ path('get',{'id':globe.id}) }}" class="btn btn-info">Details</a>
                    <a href="{{ path('edit',{'id':globe.id}) }}" class="btn btn-warning">Edit</a>
                    <a href="{{ path('delete',{'id':globe.id}) }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}


        </tbody>
    </table>
    </div>{% endblock %}
